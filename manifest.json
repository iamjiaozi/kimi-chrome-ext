{
  "manifest_version": 3,
  "name": "kimi会话助手",
  "version": "0.1.0",
  "description": "使用 www.kimi.com 时增强会话体验：显示用户问题并快速跳转。",
  "host_permissions": [
    "*://www.kimi.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.kimi.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["textContent.css"],
      "matches": ["*://www.kimi.com/*"]
    }
  ]
}
